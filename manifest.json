{
    "manifest_version": 2,
    "name": "Alien Worlds  Timer",
    "version": "0.1",
    "permissions": [
        "storage"
    ],
    "content_scripts": [
        {
          "matches": [
            "<all_urls>"
          ],
          "js": ["content.js"]
        }
      ],
      "background": {
          "scripts": ["background.js"],
          "persistent": false
      },
    "browser_action": {  "default_popup": "popup.html" },
    "icons": {
        "16": "favicon.ico",
        "48": "favicon.ico",
        "128": "favicon.ico"
    }
  }