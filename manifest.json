{
  "manifest_version": 2,
  "name": "Alien Worlds Timer",
  "description": "Track when your next mine is available so you never forget",
  "version": "0.1.5",
  "author": "Brooklyn",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "https://cmstats.net/",
    "https://wax.eosrio.io/"
  ]
}